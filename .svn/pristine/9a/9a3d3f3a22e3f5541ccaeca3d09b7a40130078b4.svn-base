<script>
    //设置未启动，终止，删除禁止，可开始，查看
    $('.operateStop').css('color', 'rgb(192, 192, 192)');
    $('.operateStop').on("click", function () {
        return false;
    });
    $('.operateDelete').css('color', 'rgb(192, 192, 192)');
    $('.operateDelete').on("click", function () {
        return false;
    });

//    进度条
    var loaders = document.querySelectorAll('.loader-container');
    var meters = document.querySelectorAll('.meter');
    for (var j = 0; j < loaders.length; j++) {
        var loadersFirst = loaders[0];
        var loadersSecond = loaders[1];
    }
    for (var j = 0; j < loaders.length; j++) {
        var metersFirst = meters[0];
        var metersSecond = meters[1];
    }
    var Loader = function () {
        var k, i= 1,
            counter = function () {
                if (i <= 100) {
                    metersFirst.innerHTML = i.toString();
                    i++;
                } else {
                    window.clearInterval(k);
                }
            };
        return {
            init: function (options) {
                options = options || {};
                var time = options.time ? options.time : 0,
                        interval = time/100;
                loadersFirst.classList.add('run');

                k = window.setInterval(counter, interval);
                setTimeout(function () {
                    loadersFirst.classList.add('done');
                    if(loadersFirst.className.indexOf("done")>-1){
                        Loader1.init({time: 10000});
                    }
                }, time);
            }
        }
    }();
    var Loader1 = function () {
        var k, i= 1,
            counter = function () {
                if (i <= 100) {
                    metersSecond.innerHTML = i.toString();
                    i++;
                } else {
                    window.clearInterval(k);
                }
            };
        return {
            init: function (options) {
                options = options || {};
                var time = options.time ? options.time : 0,
                        interval = time/100;
                loadersSecond.classList.add('run');

                k = window.setInterval(counter, interval);
                setTimeout(function () {
                    loadersSecond.classList.add('done');
                    if(loadersSecond.className.indexOf("done")>-1){
//                        改变状态
                        console.log($('.statusStation')[0].innerHTML);
                        $('.statusStation')[0].innerHTML = "完成";
                        $('.statusStation')[0].style.color= "#F60C0C";
                        //设置状态100%，开始，终止，删除禁止，可查看
                        $('.operateDelete').css('color', 'rgb(192, 192, 192)');
                        $('.operateDelete').on("click", function () {
                            return false;
                        });
                        $('.operateStop').css('color', 'rgb(192, 192, 192)');
                        $('.operateStop').on("click", function () {
                            return false;
                        });
                    }
                }, time);
            }
        }
    }();
    $(document).on("click",".operateStart", function(){
        $('.statusStation')[0].innerHTML = '进行中';
        $('.statusStation')[0].style.color= "#B76070";
        Loader.init({time: 10000});
        //设置进行中，开始，删除禁止,可中止，查看
        $(this).css('color', 'rgb(192, 192, 192)');
        $('.operateStop').css('color', 'rgb(255, 137, 42)');
        //设置终止点击，开始，终止禁止，可删除，查看
        $('.operateStop').on("click", function () {
            $(this).css('color', 'rgb(192, 192, 192)');
            $('.operateDelete').css('color', 'rgb(221, 90, 67)');
            return false;
        });
        return false;

    });
</script>

