    <script type="text/javascript">
        $('.J_ajaxForm').submit(function(e){
        e.stopPropagation();
        e.preventDefault();
        var addNet_data = $('.J_ajaxForm').serialize();
        $.ajax({
            url:'__URL__/authorize_post',
            type:'POST',
            dataType:'json',
            data:addNet_data,
            success:function(data){
                if(data.status=='success'){
                    layer.msg(data.msg);
                    window.location.href="__URL__/usergroup";
                } else if (data.status=='clear') {
                    layer.msg(data.msg);
                    window.location.href="__URL__/usergroup";
                }else if (data.status=='failed') {
                    layer.msg(data.msg);
                    window.location.href="__URL__/usergroup";
                };
            }
        });
    });
        $(document).ready(function () {
